---
import { siteConfig } from "../config";
const hasProjects = siteConfig.projects && siteConfig.projects.length > 0;
---

{
  hasProjects && (
    <section id="projects" class="p-8 sm:p-12 md:p-16 lg:p-24">
      <div>
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-start">
          <div class="lg:col-span-4">
            <h2 class="text-3xl sm:text-4xl md:text-5xl xl:text-7xl font-bold text-gray-900">
              Projects
            </h2>
            <div
              class="w-[75px] h-[5px] mt-2 rounded-full"
              style={`background-color: ${siteConfig.accentColor}`}
            />
          </div>

          <div class="lg:col-span-8">
            <div class="space-y-8">
              {siteConfig.projects.map((project, index) => {
                return (
                  <div class="group relative">
                    <button
                      type="button"
                      data-project-index={index}
                      class="project-card block w-full text-left relative p-4 sm:p-6 md:p-8 bg-gray-50 rounded-xl sm:rounded-2xl border border-gray-200 transition-all duration-300 hover:bg-white hover:shadow-xl hover:border-gray-300 hover:-translate-y-1 cursor-pointer"
                    >
                      <div class="absolute top-4 right-4 sm:top-6 sm:right-6 md:top-8 md:right-8 w-10 h-10 sm:w-11 sm:h-11 md:w-12 md:h-12 flex items-center justify-center bg-gray-900 rounded-full text-white transition-all duration-300 group-hover:bg-gray-700">
                        <svg
                          class="w-4 h-4 sm:w-4.5 sm:h-4.5 md:w-5 md:h-5 transition-transform duration-300 group-hover:scale-110"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                          />
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                          />
                        </svg>
                      </div>

                      <div class="space-y-4">
                        <div>
                          <span
                            class="text-sm font-mono"
                            style={{ color: siteConfig.accentColor }}
                          >
                            0{index + 1}
                          </span>
                          <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mt-1">
                            {project.name}
                          </h3>
                          {project.thumbnail && (
                            <div class="mt-4 rounded-lg overflow-hidden border border-gray-200 bg-white">
                              <img
                                src={project.thumbnail.src}
                                alt={`${project.name} thumbnail`}
                                class="w-full h-40 sm:h-48 object-cover"
                                loading="lazy"
                              />
                            </div>
                          )}
                        </div>

                        <p class="text-base sm:text-lg text-gray-600 leading-relaxed pr-12 sm:pr-14 md:pr-16">
                          {project.description}
                        </p>

                        {project.skills && project.skills.length > 0 && (
                          <div class="flex flex-wrap gap-1.5 sm:gap-2 pt-2">
                            {project.skills.map((skill) => (
                              <span class="px-2.5 sm:px-3 py-1 sm:py-1.5 bg-gray-900 text-white rounded-md sm:rounded-lg text-xs sm:text-sm font-medium transition-all duration-300 group-hover:bg-gray-800">
                                {skill}
                              </span>
                            ))}
                          </div>
                        )}
                      </div>
                    </button>
                  </div>
                );
              })}
            </div>
          </div>
        </div>
      </div>

      {/* Modal */}
      <div
        id="project-modal"
        class="fixed inset-0 bg-black/60 backdrop-blur-sm z-50 hidden items-center justify-center p-4 sm:p-6 md:p-8"
      >
        <div class="bg-white rounded-2xl max-w-5xl w-full max-h-[90vh] overflow-y-auto relative shadow-2xl">
          <button
            id="close-modal"
            class="sticky top-4 float-right mr-4 mt-4 z-10 w-10 h-10 flex items-center justify-center bg-gray-900 hover:bg-gray-700 rounded-full text-white transition-all duration-300"
          >
            <svg
              class="w-5 h-5"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"
              />
            </svg>
          </button>

          <div class="p-6 sm:p-8 md:p-10 pt-16">
            {/* Image Carousel */}
            <div id="modal-carousel" class="relative mb-8 rounded-xl overflow-hidden bg-gray-100">
              <div class="carousel-container aspect-video relative">
                <img
                  id="carousel-image"
                  class="w-full h-full object-cover"
                  alt="Project image"
                />

                {/* Carousel Navigation */}
                <button
                  id="carousel-prev"
                  class="absolute left-4 top-1/2 -translate-y-1/2 w-10 h-10 flex items-center justify-center bg-white/90 hover:bg-white rounded-full shadow-lg transition-all duration-300 carousel-nav"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                  </svg>
                </button>
                <button
                  id="carousel-next"
                  class="absolute right-4 top-1/2 -translate-y-1/2 w-10 h-10 flex items-center justify-center bg-white/90 hover:bg-white rounded-full shadow-lg transition-all duration-300 carousel-nav"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </button>

                {/* Carousel Indicators */}
                <div id="carousel-indicators" class="absolute bottom-4 left-1/2 -translate-x-1/2 flex gap-2" />
              </div>
            </div>

            {/* Project Details */}
            <div class="space-y-6">
              <div>
                <h3
                  id="modal-title"
                  class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4"
                />
                <p
                  id="modal-description"
                  class="text-lg text-gray-600 leading-relaxed"
                />
              </div>

              {/* Project Info Grid */}
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 pt-4 border-t border-gray-200">
                <div id="modal-role-container" class="flex items-start gap-3">
                  <div class="w-10 h-10 flex items-center justify-center bg-blue-100 rounded-lg flex-shrink-0">
                    <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-gray-500">Role</div>
                    <div id="modal-role" class="text-base font-semibold text-gray-900" />
                  </div>
                </div>

                <div id="modal-timeline-container" class="flex items-start gap-3">
                  <div class="w-10 h-10 flex items-center justify-center bg-purple-100 rounded-lg flex-shrink-0">
                    <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-gray-500">Timeline</div>
                    <div id="modal-timeline" class="text-base font-semibold text-gray-900" />
                  </div>
                </div>

                <div id="modal-scope-container" class="flex items-start gap-3">
                  <div class="w-10 h-10 flex items-center justify-center bg-green-100 rounded-lg flex-shrink-0">
                    <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-gray-500">Scope</div>
                    <div id="modal-scope" class="text-base font-semibold text-gray-900" />
                  </div>
                </div>

                <div id="modal-methodology-container" class="flex items-start gap-3">
                  <div class="w-10 h-10 flex items-center justify-center bg-orange-100 rounded-lg flex-shrink-0">
                    <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-gray-500">Methodology</div>
                    <div id="modal-methodology" class="text-base font-semibold text-gray-900" />
                  </div>
                </div>

                <div id="modal-team-size-container" class="flex items-start gap-3">
                  <div class="w-10 h-10 flex items-center justify-center bg-indigo-100 rounded-lg flex-shrink-0">
                    <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                  </div>
                  <div>
                    <div class="text-sm font-medium text-gray-500">Team Size</div>
                    <div id="modal-team-size" class="text-base font-semibold text-gray-900" />
                  </div>
                </div>
              </div>

              {/* Tech Stack */}
              <div id="modal-tech-stack-container" class="pt-4 border-t border-gray-200">
                <div class="flex items-center gap-2 mb-3">
                  <div class="w-10 h-10 flex items-center justify-center bg-red-100 rounded-lg">
                    <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                    </svg>
                  </div>
                  <h4 class="text-lg font-semibold text-gray-900">Tech Stack</h4>
                </div>
                <div id="modal-tech-stack" class="flex flex-wrap gap-2" />
              </div>

              {/* Tools */}
              <div id="modal-tools-container" class="pt-4 border-t border-gray-200">
                <div class="flex items-center gap-2 mb-3">
                  <div class="w-10 h-10 flex items-center justify-center bg-yellow-100 rounded-lg">
                    <svg class="w-5 h-5 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <h4 class="text-lg font-semibold text-gray-900">Tools</h4>
                </div>
                <div id="modal-tools" class="flex flex-wrap gap-2" />
              </div>

              {/* Skills */}
              <div id="modal-skills-container" class="pt-4 border-t border-gray-200">
                <div class="flex items-center gap-2 mb-3">
                  <div class="w-10 h-10 flex items-center justify-center bg-pink-100 rounded-lg">
                    <svg class="w-5 h-5 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                    </svg>
                  </div>
                  <h4 class="text-lg font-semibold text-gray-900">Skills</h4>
                </div>
                <div id="modal-skills" class="flex flex-wrap gap-2" />
              </div>

              {/* Project Link */}
              <div id="modal-link-container" class="pt-4">
                <a
                  id="modal-link"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-6 py-3 bg-gray-900 hover:bg-gray-700 text-white font-semibold rounded-lg transition-all duration-300"
                >
                  Visit Project
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

<script
  define:vars={{
    projectsData: siteConfig.projects.map((project) => ({
      name: project.name,
      description: project.description,
      link: project.link,
      role: project.role,
      timeline: project.timeline,
      scope: project.scope,
      methodology: project.methodology,
      teamSize: project.teamSize,
      techStack: project.techStack,
      tools: project.tools,
      skills: project.skills,
      images: project.images?.map((img) => ({
        src: img.src.src,
        alt: img.alt,
      })),
    })),
  }}
>
  let currentProject = null;
  let currentImageIndex = 0;

  // Open modal
  document.querySelectorAll('.project-card').forEach((card) => {
    card.addEventListener('click', () => {
      const index = parseInt(card.getAttribute('data-project-index'));
      currentProject = projectsData[index];
      currentImageIndex = 0;
      openModal();
    });
  });

  // Close modal
  document.getElementById('close-modal').addEventListener('click', closeModal);
  document.getElementById('project-modal').addEventListener('click', (e) => {
    if (e.target.id === 'project-modal') {
      closeModal();
    }
  });

  // Carousel navigation
  document.getElementById('carousel-prev').addEventListener('click', () => {
    if (currentProject.images && currentProject.images.length > 0) {
      currentImageIndex = (currentImageIndex - 1 + currentProject.images.length) % currentProject.images.length;
      updateCarousel();
    }
  });

  document.getElementById('carousel-next').addEventListener('click', () => {
    if (currentProject.images && currentProject.images.length > 0) {
      currentImageIndex = (currentImageIndex + 1) % currentProject.images.length;
      updateCarousel();
    }
  });

  // Keyboard navigation
  document.addEventListener('keydown', (e) => {
    const modal = document.getElementById('project-modal');
    if (!modal.classList.contains('hidden')) {
      if (e.key === 'Escape') {
        closeModal();
      } else if (e.key === 'ArrowLeft') {
        document.getElementById('carousel-prev').click();
      } else if (e.key === 'ArrowRight') {
        document.getElementById('carousel-next').click();
      }
    }
  });

  function openModal() {
    const modal = document.getElementById('project-modal');
    modal.classList.remove('hidden');
    modal.classList.add('flex');
    document.body.style.overflow = 'hidden';

    // Populate modal content
    document.getElementById('modal-title').textContent = currentProject.name;
    document.getElementById('modal-description').textContent = currentProject.description;

    // Conditionally show/hide and populate fields
    toggleField('modal-role-container', 'modal-role', currentProject.role);
    toggleField('modal-timeline-container', 'modal-timeline', currentProject.timeline);
    toggleField('modal-scope-container', 'modal-scope', currentProject.scope);
    toggleField('modal-methodology-container', 'modal-methodology', currentProject.methodology);
    toggleField('modal-team-size-container', 'modal-team-size', currentProject.teamSize ? `${currentProject.teamSize} members` : null);

    // Tech Stack
    if (currentProject.techStack && currentProject.techStack.length > 0) {
      document.getElementById('modal-tech-stack-container').classList.remove('hidden');
      const techStackEl = document.getElementById('modal-tech-stack');
      techStackEl.innerHTML = currentProject.techStack.map(tech =>
        `<span class="px-3 py-1.5 bg-red-100 text-red-700 rounded-lg text-sm font-medium">${tech}</span>`
      ).join('');
    } else {
      document.getElementById('modal-tech-stack-container').classList.add('hidden');
    }

    // Tools
    if (currentProject.tools && currentProject.tools.length > 0) {
      document.getElementById('modal-tools-container').classList.remove('hidden');
      const toolsEl = document.getElementById('modal-tools');
      toolsEl.innerHTML = currentProject.tools.map(tool =>
        `<span class="px-3 py-1.5 bg-yellow-100 text-yellow-700 rounded-lg text-sm font-medium">${tool}</span>`
      ).join('');
    } else {
      document.getElementById('modal-tools-container').classList.add('hidden');
    }

    // Skills
    if (currentProject.skills && currentProject.skills.length > 0) {
      document.getElementById('modal-skills-container').classList.remove('hidden');
      const skillsEl = document.getElementById('modal-skills');
      skillsEl.innerHTML = currentProject.skills.map(skill =>
        `<span class="px-3 py-1.5 bg-pink-100 text-pink-700 rounded-lg text-sm font-medium">${skill}</span>`
      ).join('');
    } else {
      document.getElementById('modal-skills-container').classList.add('hidden');
    }

    // Project Link
    if (currentProject.link) {
      document.getElementById('modal-link-container').classList.remove('hidden');
      document.getElementById('modal-link').setAttribute('href', currentProject.link);
    } else {
      document.getElementById('modal-link-container').classList.add('hidden');
    }

    // Setup carousel
    updateCarousel();
  }

  function closeModal() {
    const modal = document.getElementById('project-modal');
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    document.body.style.overflow = '';
  }

  function toggleField(containerId, fieldId, value) {
    const container = document.getElementById(containerId);
    const field = document.getElementById(fieldId);

    if (value) {
      container.classList.remove('hidden');
      field.textContent = value;
    } else {
      container.classList.add('hidden');
    }
  }

  function updateCarousel() {
    if (!currentProject.images || currentProject.images.length === 0) {
      document.getElementById('modal-carousel').classList.add('hidden');
      return;
    }

    document.getElementById('modal-carousel').classList.remove('hidden');
    const carouselImage = document.getElementById('carousel-image');
    const indicators = document.getElementById('carousel-indicators');

    // Update image
    carouselImage.src = currentProject.images[currentImageIndex].src;
    carouselImage.alt = currentProject.images[currentImageIndex].alt;

    // Update indicators
    indicators.innerHTML = currentProject.images.map((_, index) =>
      `<button class="w-2 h-2 rounded-full transition-all duration-300 ${index === currentImageIndex ? 'bg-white w-8' : 'bg-white/50'}" data-index="${index}"></button>`
    ).join('');

    // Add click handlers to indicators
    indicators.querySelectorAll('button').forEach((btn, index) => {
      btn.addEventListener('click', () => {
        currentImageIndex = index;
        updateCarousel();
      });
    });

    // Show/hide navigation buttons
    const navButtons = document.querySelectorAll('.carousel-nav');
    if (currentProject.images.length <= 1) {
      navButtons.forEach(btn => btn.classList.add('hidden'));
    } else {
      navButtons.forEach(btn => btn.classList.remove('hidden'));
    }
  }
</script>
